<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Codecyt Inventario - Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <%- include('../partials/navbar') %>



    <div class="container py-5">
        <h1 class="mb-4 text-primary">ðŸŒ± Codecyt: GestiÃ³n de Usuarios</h1>
        
        <div class="card mb-4 p-4 shadow-sm border-0">
            <h5 class="card-title mb-3">Registrar Nuevo Usuario</h5>
            <form action="/usuarios" method="POST" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre completo" required>
                </div>
                <div class="col-md-4">
                    <input type="email" name="correo" class="form-control" placeholder="correo@codecyt.com" required>
                </div>
                <div class="col-md-2">
                    <select name="rol" class="form-select">
                        <option value="Trabajador">Trabajador</option>
                        <option value="Administrador">Administrador</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">Registrar</button>
                </div>
            </form>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <form action="/usuarios" method="GET" class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Buscar por nombre o correo..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                    <% if (typeof search !== 'undefined' && search) { %>
                        <a href="/usuarios" class="btn btn-outline-secondary">Limpiar</a>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover bg-white m-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (usuarios.length > 0) { %>
                        <% usuarios.forEach(u => { %>
                        <tr class="align-middle">
                            <td class="fw-bold"><%= u.nombre %></td>
                            <td><%= u.correo %></td>
                            <td><span class="badge bg-info text-dark"><%= u.rol %></span></td>
                            <td>
                                <span class="badge <%= u.activo ? 'bg-success' : 'bg-secondary' %>">
                                    <%= u.activo ? 'Activo' : 'Inactivo' %>
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="/usuarios/<%= u._id %>" class="btn btn-sm btn-warning">Editar</a>
                                <a href="/usuarios/delete/<%= u._id %>" 
                                   class="btn btn-sm btn-outline-danger" 
                                   onclick="return confirm('Â¿Seguro que deseas eliminar a <%= u.nombre %>?')">
                                   Eliminar
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center py-4">No se encontraron usuarios.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>